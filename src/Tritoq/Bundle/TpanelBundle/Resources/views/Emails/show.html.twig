{% extends 'TritoqTpanelBundle::layout.html.twig' %}

{% block body -%}
    <h1>Emails</h1>

    <table class="record_properties table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ entity.password }}</td>
        </tr>
        <tr>
            <th>Dominio</th>
            <td>{{ entity.dominio }}</td>
        </tr>
        <tr>
            <th>Path</th>
            <td>{{ entity.path }}</td>
        </tr>
        <tr>
            <th>Postmaster</th>
            <td>{{ entity.postmaster }}</td>
        </tr>
        </tbody>
    </table>

    {{ include('TritoqTpanelBundle:Default:record-actions.html.twig', {'entity': entity, 'route': 'email', 'delete_form': delete_form}) }}
{% endblock %}
