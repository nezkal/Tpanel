<!DOCTYPE html>
<html ng-app="Tpanel">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Tpanel Vhosts Configuration{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    </head>
    <body>
        <div class="main-content">
            <div class='left-bar'>{% block bar %} {% endblock %}</div>
            <div class='content'>{% block body %}{% endblock %}</div>
        </div>
        <footer>
            <a href="http://tritoq.com" target="_blank">by Tritoq</a>
        </footer>
        {% block javascripts %}{% endblock %}
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js" type="application/javascript"></script>
        <script src="{{ asset('bundles/tritoqtpanel/js/tpanel.js') }}" type="text/javascript"></script>
    </body>
</html>
